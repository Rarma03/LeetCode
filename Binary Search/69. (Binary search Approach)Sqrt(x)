class Solution {
public:
    int mySqrt(int x) {
        long l=1,r=x,ans;
        long long mid=l+(r-l)/2;

        while(l<=r){
            if(mid*mid > x){
                r=mid-1;
            }
            else if(mid*mid < x){
                ans=mid;
                l=mid+1;
            }
            else{
                if(mid<0){
                    return 0;
                }
                return mid;
            }
            mid=l+(r-l)/2;
        }
        if(ans<0){
            return 0;
        }
        return ans;
    }
};
